<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" Width="400">
            <Label Content="Введите число от 1 до 10:" Margin="125,0,0,0" />
            <TextBox x:Name="NumberInputTextBox" TextChanged="NumberInputTextBox_TextChanged"/>
            <Button Content="Заполнить прогресс-бары" Click="FillProgressBarsButton_Click" Margin="100,5,100,10"/>
            <StackPanel x:Name="ProgressBarContainer" Orientation="Vertical" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
